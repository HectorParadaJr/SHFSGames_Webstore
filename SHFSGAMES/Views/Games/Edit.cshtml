@model SHFSGAMES.Models.Games

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GameId" />
            <div class="form-group">
                <label asp-for="GameName" class="control-label"></label>
                <input asp-for="GameName" class="form-control" />
                <span asp-validation-for="GameName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameDescription" class="control-label"></label>
                <input asp-for="GameDescription" class="form-control" />
                <span asp-validation-for="GameDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameDeveloper" class="control-label"></label>
                <input asp-for="GameDeveloper" class="form-control" />
                <span asp-validation-for="GameDeveloper" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleaseDate" class="control-label"></label>
                <input type="date" asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameCategories" class="control-label">Categories</label>
                <select asp-for="GameCategories" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <div class="text-danger">@ViewBag.Cerror</div>
            </div>
            @*<div>
                @Html.ListBox("GameCategories", ViewBag.CategoryId as SelectList);
            </div>*@
        <div class="form-group">
            <label asp-for="GamePlatforms" class="control-label">Platforms</label>
            <select asp-for="GamePlatforms" class="form-control" asp-items="ViewBag.PlatformId"></select>
            <div class="text-danger">@ViewBag.Perror</div>

        </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

