@model SHFSGAMES.Models.Games

@{
    ViewData["Title"] = "Game Details";
}

<h1>@Html.DisplayFor(model => model.GameName)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameDeveloper)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameDeveloper)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            Categories
        </dt>
        <dd class="col-sm-10">
            @foreach (var game in Model.GameCategories)
            {
                @game.Categories.CategoryName
                <br />
            }
        </dd>
        <dt class="col-sm-2">
            Platforms
        </dt>
        <dd class="col-sm-10">
            @foreach (var game in Model.GamePlatforms)
            {
                @game.Platforms.PlatformName
                <br />
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RatingTotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RatingTotal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>
<div>
    <div id="wishlistMsg" class="text-danger">@ViewBag.wishlistMsg</div>
    <a asp-action="AddGameToWishlist" asp-route-id="@Model.GameId">Add to Wishlist</a> | <br />
    <a asp-controller="Reviews" asp-action="ViewReviewsForGame" asp-route-id="@Model.GameId">View Reviews</a> | <br />
    <div class="text-danger">@ViewBag.cartMsg</div>
    <a asp-controller="CartItems" asp-action="Create" asp-route-id="@Model.GameId">Add to cart</a> | <br />
    <a asp-action="MemberIndex">Back</a>
</div>
