@model SHFSGAMES.Models.Orders

@{
    ViewData["Title"] = "Create";
}

<h1>Choose Payment Method</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PlaceOrder">
            <div class="form-group">
                <label asp-for="PaymentId" class="control-label">Payments (Card Number/Expiration Date):</label>
                <select asp-for="PaymentId" class="form-control" asp-items="ViewBag.PaymentId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit Order" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="text-danger">@ViewBag.error</div>
<div>
    Don't see any payments? 
    <a asp-controller="Payments" asp-action="Create">Create one</a>
</div>
<br />
<div>
    <a asp-action="Index">Back</a>
</div>