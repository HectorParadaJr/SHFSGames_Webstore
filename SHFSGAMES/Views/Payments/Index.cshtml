@model IEnumerable<SHFSGAMES.Models.Payments>

@{
    ViewData["Title"] = "Index";
}

<h1>Credit Cards Added</h1>

<p>
    <a asp-action="Create">Add New Credit Card</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CardNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpirationMonth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpirationYear)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CardNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpirationMonth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpirationYear)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PaymentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PaymentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PaymentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-area="" asp-controller="Members" asp-action="MemberHomePage">Back</a>
</div>
