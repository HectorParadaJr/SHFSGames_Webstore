@model SHFSGAMES.Models.Reviews

@{
    ViewData["Title"] = "Details";
}

<h1>Review Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Games)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Games.GameName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReviewTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewDetails)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReviewDetails)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReviewDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Approved)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Approved)
        </dd>
    </dl>
</div>
<div>
    @if (!Model.Approved)
    {
        <a asp-action="Edit" asp-route-id="@Model.ReviewId">Edit</a>
    }
    | <a asp-action="Index">Back</a>
</div>
