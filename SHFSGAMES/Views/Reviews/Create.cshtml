@model SHFSGAMES.Models.Reviews

@{
    ViewData["Title"] = "Create";
}

<h1>Add Review</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameId" class="control-label"></label>
                <select asp-for="GameId" class="form-control" asp-items="ViewBag.GameId"></select>
                <div class="text-danger">@ViewBag.gameError</div>
            </div>
            <div class="form-group">
                <label hidden asp-for="MemberId" class="control-label"></label>
                <select hidden asp-for="MemberId" class ="form-control" asp-items="ViewBag.MemberId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ReviewTitle" class="control-label"></label>
                <input asp-for="ReviewTitle" class="form-control" />
                <span asp-validation-for="ReviewTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReviewDetails" class="control-label"></label>
                <input asp-for="ReviewDetails" class="form-control" />
                <span asp-validation-for="ReviewDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label hidden asp-for="Approved" class="control-label"></label>
                <input hidden asp-for="Approved" class="form-control" />
                <span asp-validation-for="Approved" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label hidden asp-for="ReviewDate" class="control-label"></label>
                <input hidden asp-for="ReviewDate" class="form-control" />
            </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>

