@model IEnumerable<SHFSGAMES.Models.Orders>

@{
    ViewData["Title"] = "Index";
}

<h1>Your Orders</h1>
<div class="text-danger">
    @ViewBag.delete
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @if (item.Status == "Shipped")
                {
                    @Html.DisplayFor(modelItem => item.ShippedDate)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @if (item.Status == "Received")
                {
                    <a asp-controller="OrderItems" asp-action="Index" asp-route-id="@item.OrderId">View Order Details</a><br />
                    <a asp-action="Delete" asp-route-id="@item.OrderId">Cancel Order</a>

                }
                else
                {
                    <a asp-controller="OrderItems" asp-action="Index" asp-route-id="@item.OrderId">View Order Details</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
